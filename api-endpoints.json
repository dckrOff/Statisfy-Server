          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/notifications/send": {
      "post": {
        "tags": ["Notifications"],
        "summary": "Send push notification (admin only)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "example": "Important Update"
                  },
                  "body": {
                    "type": "string",
                    "example": "Check out our latest feature!"
                  },
                  "targetUsers": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "example": [1, 2, 5]
                  },
                  "targetAll": {
                    "type": "boolean",
                    "example": false
                  },
                  "data": {
                    "type": "object",
                    "example": {
                      "type": "FACT",
                      "id": 123
                    }
                  }
                },
                "required": ["title", "body"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Notification sent successfully"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden, admin access required"
          }
        }
      }
    },
